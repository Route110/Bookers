<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
    <h5>Title</h5>
    <%= f.text_field :title %>
    <h5>Body</h5>
    <%= f.text_area :body %>
    <h5><%= f.submit 'Update Book' %></h5>
    <%= link_to "Show", book_path(@book), class:"show_#{@book.id}" %>
     | 
    <%= link_to "Back", books_path, class:"back" %>
<% end %>