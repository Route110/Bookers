<html>
	<head>
		<title>Application-practice</title>
	</head>
	<% if flash[:notice] %>
		<p><%= flash[:notice] %></p>
	<% end %>
	<h1>Books</h1>
		<table>
			<thead>
				<tr>
					<th>Title</th>
					<th>Body</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
			<% @books.each do |book| %>
				<tr>
					<td><%= book.title %></td>
					<td><%= book.body %></td>
					<td><%= link_to "Show", book_path(book.id), class:"show_#{book.id}" %></td>
					<td><%= link_to "Edit", edit_book_path(book.id), class:"edit_#{book.id}" %></td>
					<td><%= link_to "Destroy", book_path(book.id), class:"destroy_#{book.id}", method: :delete, "data-confirm" => "Are you sure?" %></td>
					</td>
				</tr>
			<% end %>
			</tbody>
		</table>
		<h2>New Book</h2>
			<%= form_for(@book) do |f| %>
			<div>
			    <label>Title</label><br>
			    <%= f.text_field :title, class:"book_title" %><br>
			</div>
			<br>
			<div>
			    <label>Body</label><br>
			    <%= f.text_area :body, class:"book_body" %>
			</div>
			    <h3><%= f.submit 'Create Book' %></h3>
			<% end %>
</html>